<div class="container-fluid">
    <div class="row block">
        
             {% if category.name == 'assistance' %}
            <img src="{{ asset('images/assistance.jpg') }}" style="border-radius:10%; display:block; margin:auto; margin-top:30px; margin-bottom:30px;  max-width: 300px;">
            {% elseif category.name == 'animaux' %}
