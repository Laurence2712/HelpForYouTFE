{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .tableau {margin-top: 100px;}
    .title{  color:#fff; text-align:center; margin-top: 60px; background: #005c96; border: 1px solid #005c96; border-radius: 50px; padding: 20px;  } 
</style>

<div class="example-wrapper">
    <h2 class="title">Liste des utilisateurs</h2>

<table class="table tableau">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Nom</th>
      <th scope="col">Pr√©nom</th>
      <th scope="col">Adresse</th>
      <th scope="col">Email</th>
      <th scope="col">A propos</th>
    </tr>
  </thead>
  <tbody>
    <tr>
     {% for user in users %}
      <th scope="row"></th>
      <td>{{ user.lastname }}</td>
      <td>{{ user.firstname }}</td>
      <td>{{ user.address }} {{ user.postalCode }} {{ user.city }}</td>
      <td>{{ user.email }}</td> 
      <td>{{ user.description }}</td> 
    </tr>
    {% endfor %}
  </tbody>
</table>

</div>
{% endblock %}
