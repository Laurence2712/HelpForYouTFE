{% extends 'base.html.twig' %}

{% form_theme form'bootstrap_4_layout.html.twig' %}

{% block title %}Ajouter une annonce{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .banniere { margin-top: 60px; background: #048b9a; border: 1px solid #048b9a; border-radius: 15px; padding: 20px; color:#fff; text-align:center;}
    .containerService{ margin-bottom: 25px;}
    .btnService{ }
    .title { margin-top: 60px; background: #005c96; border: 1px solid #005c96; border-radius: 15px; padding: 20px; color:#fff; text-align:center;}
    *{font-family: 'Lato';}
</style>

<div class="example-wrapper">

    <h1 class="title">Modification de l'annonce</h1>   
{{ form_start(form)}}
{{ form_row(form.firstname, {'label': 'Prénom', 'attr':{'value':app.user.firstname}}) }}
{{ form_row(form.title, {'label': 'Titre'}) }}
{{ form_row(form.description, {'label': 'Description'}) }}
{{ form_row(form.nbPoint, {'label': 'Nombre de points à donner'}) }}
{{ form_row(form.category, {'label': 'Catégorie'}) }}

<button  type="submit" class="btn btn-success" style="margin:auto; display:block;">
        Enregistrer les modifications
</button>

{{ form_end(form)}}

</div>

{% endblock %}
